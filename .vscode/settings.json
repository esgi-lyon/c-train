{
    "editor.mouseWheelZoom": false,
    "emeraldwalk.runonsave": {
        "autoClearConsole": true,
        "commands": [
            {
                "match": "\\.[c|h]",
                "cmd": "make"
            }
        ]
    },
    "files.associations": {
        "*.yml": "yaml",
        "numeric": "c",
        "ratio": "c",
        "*.tcc": "c",
        "cstdlib": "c"
    }
}
